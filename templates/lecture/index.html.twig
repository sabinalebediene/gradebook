{% extends 'base.html.twig' %}

{% block title %}Lecture List
{% endblock %}

{% block body %}


<div class="container-fluid">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card">
				<div class="card-header">
					<h1>Lectures</h1>
				</div>
				<div class="card-body">
					List order by:
					<form action="{{path('lecture_index')}}" method="GET" lass="sort-form  ">
						<div class="form-group">
							<select name="sort" class="form-control">
								<option value="default">default</option>
								<option value="title_az" {% if sortBy =='title_az'%} selected {% endif %}>TITLE A-Z</option>
								<option value="title_za" {% if sortBy =='title_za'%} selected {% endif %}>TITLE Z-A</option>
							</select>
						</div>
						<button type="submit" class="btn btn-dark">Sort IT!</button>
						<a href="{{path('lecture_index')}}">CLEAR</a>
					</form>
					<ul class="list-group">
						{% for lecture in lectures %}
							<li class="container list-group-item">
								<div class="row list-group-item__line">
									<div class="col-sm">
										{{lecture.title}}
									</div>
									<div class="btn-group list-group-item__line__buttons" role="group" aria-label="Basic example">
										<a href="{{path('student_edit', {id:lecture.id})}}" class="btn btn-secondary">EDIT</a>
										<form action="{{path('student_delete', {id:lecture.id})}}" method="POST">
											<button type="submit" class="btn btn-primary">DELETE</button>
										</form>
									</div>
								</div>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}
