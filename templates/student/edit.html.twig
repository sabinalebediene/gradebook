{% extends 'base.html.twig' %}

{% block title %}Edit Student{% endblock %}

{% block body %}


<div class="container">
   <div class="row justify-content-center">
       <div class="col-md-8">
           <div class="card">
               <div class="card-header"><h1>Edit  Student</h1></div>
               <div class="card-body">
                    <form action="{{path('student_update', {id:student.id})}}" method="POST">
							<div class="form-group">
								<label>Name</label>
								<input type="text" name="student_name" class="form-control" value="{{student_name}}">
								<small class="form-text text-muted">Student name</small>
							</div>
							<div class="form-group">
								<label>Surname</label>
								<input type="text" name="student_surname" class="form-control" value="{{student_surname}}">
								<small class="form-text text-muted">Student surname</small>
							</div>
							<div class="form-group">
								<label>Email</label>
								<input type="text" name="student_email" class="form-control" value="{{student_email}}">
								<small class="form-text text-muted">Student email</small>
							</div>
							<div class="form-group">
								<label>Phone</label>
								<input type="text" name="student_phone" class="form-control" value="{{student_phone}}">
								<small class="form-text text-muted">Student phone</small>
							</div>
                    <button type="submit" class="btn btn-primary">Edit Student</button>
                    </form>
               </div>
           </div>
       </div>
   </div>
</div>

{% endblock %}